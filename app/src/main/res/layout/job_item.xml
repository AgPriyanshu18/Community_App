<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="16dp"
        app:cardCornerRadius="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/theme_purple"
            android:weightSum="1"
            android:padding="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:orientation="horizontal"
                android:weightSum="1"
                >
                <TextView
                    android:id="@+id/job_position"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Job Position"
                    android:textSize="22dp"
                    android:layout_weight="0.6"
                    android:textColor="#00B8A9"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/job_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Job Position"
                    android:gravity="right"
                    android:layout_weight="0.4"
                    android:textColor="@color/white"
                    android:textStyle="italic"
                    />


            </LinearLayout>
            <TextView
                android:id="@+id/company_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Company Name"
                android:layout_weight="0.15"
                android:textSize="12dp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/job_description"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Job Description"
                android:layout_weight="0.3"
                android:layout_marginTop="12dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_margin="12dp"
                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_attach_money_24"
                    android:layout_gravity="right"
                    />
                <TextView
                    android:id="@+id/salary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="salary"
                    android:layout_weight="0.9"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#818181"
                android:layout_marginStart="42dp"
                android:layout_marginEnd="42dp"
                android:layout_margin="2dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_margin="8dp"
                >
                <TextView
                    android:id="@+id/job_requirements"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Job requrements"
                    android:layout_weight="0.5"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/job_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Job type(intern/full time)"
                    android:layout_weight="0.5"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    />

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>